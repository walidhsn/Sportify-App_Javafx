<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="1400.0" stylesheets="@../../../../resources/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sportify.edu.controllers.Event_view_clientController">
   <children>
      <ScrollPane layoutX="21.0" layoutY="97.0" prefHeight="501.0" prefWidth="1385.0">
         <content>
            <TilePane fx:id="events_TilePane" hgap="10.0" prefHeight="1200.0" prefWidth="1363.0" vgap="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </TilePane>
         </content>
      </ScrollPane>
      <Button fx:id="myEvents_btn" layoutX="177.0" layoutY="32.0" mnemonicParsing="false" onAction="#redirectToMyEvents" prefHeight="46.0" prefWidth="89.0" text="My Events" />
      <GridPane hgap="5.0" layoutX="385.0" layoutY="37.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <TextField fx:id="search_text" prefHeight="37.0" prefWidth="171.0" promptText="Search" />
            <ImageView fitHeight="20.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1">
               <image>
                  <Image url="@../../../../resources/search-icon.png" />
               </image>
            </ImageView>
         </children>
      </GridPane>
      <Button fx:id="back_btn" layoutX="21.0" layoutY="32.0" mnemonicParsing="false" onAction="#back_home" text="Back">
         <graphic>
            <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../resources/back-arrow.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
